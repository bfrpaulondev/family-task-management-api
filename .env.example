###############################################
# Environment variables for the API
#
# Copy this file to `.env` and fill in the values
# for your MongoDB connection and JWT secret.
###############################################

# MongoDB connection string. Example:
# mongodb+srv://user:password@cluster0.mongodb.net/dbname?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/family_tasks

# JWT secret used to sign authentication tokens
JWT_SECRET=super-secret-key

# Port the Fastify server should listen on
PORT=3000